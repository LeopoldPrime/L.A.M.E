<Window x:Class="LAME_Hub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAME_Hub"
        mc:Ignorable="d"
        Title="LAME Hub - Main Menu" Height="450" Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" Initialized="Window_Initialized" Closing="Window_Closing"
        Background="Transparent"
        >
    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundColor" Color="#23343d" />
        <SolidColorBrush x:Key="ForegroundColor" Color="#eb7623" />
        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" StrokeDashArray="1 2" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" SnapsToDevicePixels="true" StrokeThickness="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="NavbarStyleOne" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background" Value="{DynamicResource BackgroundColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ForegroundColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" CornerRadius="5" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{DynamicResource ForegroundColor}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource BackgroundColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{DynamicResource ForegroundColor}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource ForegroundColor}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="{DynamicResource BackgroundColor}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource ForegroundColor}"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{DynamicResource ForegroundColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid MouseLeftButtonDown="EnableWindowDragable">
        <Image x:Name="LoadingImage" Source="images/logo.png" Visibility="Visible" Canvas.Left="24" Canvas.Top="98" Height="232" Width="276">
            <Image.Triggers>
                <EventTrigger RoutedEvent="Image.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                  From="1.0" To="0.0" 
                  AutoReverse="True" 
                  RepeatBehavior="Forever" 
                  Duration="0:0:1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Image.Triggers>
        </Image>
        <Canvas x:Name="TitleBar" MouseLeftButtonDown="EnableWindowDragable" Background="{DynamicResource BackgroundColor}" Margin="0,0,0,412" Visibility="Hidden">
            <Button x:Name="CloseButton" Style="{StaticResource NavbarStyleOne}" Background="{DynamicResource BackgroundColor}" Foreground="{DynamicResource ForegroundColor}" BorderThickness="0" Canvas.Left="765" Canvas.Top="3" Width="30" Height="30" Click="CloseButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Image x:Name="CloseButtonImage" Source="images/close_icon.png" Height="25" Width="25" Canvas.Left="10" Canvas.Top="5" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Button>
            <Image x:Name="Logo" Source="images/Logo.png" Height="26" Width="25" Canvas.Left="10" Canvas.Top="5" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Rectangle x:Name="TitleBarBackground" Fill="{DynamicResource ForegroundColor}" Height="2" Canvas.Left="0" Canvas.Top="35" Width="800" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Canvas>
        <Canvas x:Name="navbar" Margin="0,38,642,0" Background="{DynamicResource BackgroundColor}" Visibility="Hidden">
            <Button x:Name="DestinyNavbar" Content="Destiny 2" Style="{StaticResource NavbarStyleOne}" Foreground="{DynamicResource ForegroundColor}" Canvas.Left="10" Canvas.Top="20" Width="135" Height="33" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Click="NavbarButtonClicked"/>
            <Button x:Name="WarframeNavbar" Content="Warframe" Style="{StaticResource NavbarStyleOne}" Foreground="{DynamicResource ForegroundColor}" Canvas.Left="10" Canvas.Top="65" Width="135" Height="33" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="15" Click="NavbarButtonClicked"/>
            <Button x:Name="RustNavbar" Content="Rust" Style="{StaticResource NavbarStyleOne}" Foreground="{DynamicResource ForegroundColor}" Canvas.Left="10" Canvas.Top="110" Width="135" Height="33" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="15" Click="NavbarButtonClicked"/>
            <Button x:Name="ReleaseNotesNavbar" Content="Release Notes" Background="{DynamicResource ForegroundColor}" Style="{StaticResource NavbarStyleOne}" Foreground="{DynamicResource BackgroundColor}" Canvas.Left="12" Canvas.Top="270" Width="134" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" Click="NavbarButtonClicked"/>
            <Button x:Name="CreditsNavbar" Content="Credits" Style="{StaticResource NavbarStyleOne}" Foreground="{DynamicResource ForegroundColor}" Canvas.Left="12" Canvas.Top="300" Width="134" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" Click="NavbarButtonClicked"/>
            <Button x:Name="SettingsNavbar" Content="Settings" Style="{StaticResource NavbarStyleOne}" Foreground="{DynamicResource ForegroundColor}" Canvas.Left="12" Canvas.Top="330" Width="134" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" Click="NavbarButtonClicked"/>
            <Button x:Name="DiscordNavbar" Style="{StaticResource NavbarStyleOne}" Foreground="{DynamicResource ForegroundColor}" Canvas.Left="43" Canvas.Top="360" Width="30" BorderThickness="0" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Click="DiscordNavbar_Click">
                <Image x:Name="DiscordNavbarImage" Source="images/discord_icon.png" Height="25" Width="25" Canvas.Left="10" Canvas.Top="5" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Button>
            <Button x:Name="DonateNavbar" Style="{StaticResource NavbarStyleOne}" Foreground="{DynamicResource ForegroundColor}" Canvas.Left="87" Canvas.Top="360" Width="30" BorderThickness="0" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Click="DonateNavbar_Click">
                <Image x:Name="DonateNavbarImage" Source="images/kofi_icon.png" Height="25" Width="25" Canvas.Left="10" Canvas.Top="5" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Button>
            <Rectangle Fill="{DynamicResource ForegroundColor}" Height="412" Canvas.Left="156" Canvas.Top="0" Width="2" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label Name="Version" Content="v2.2.0.0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Canvas.Left="53" Canvas.Top="386" Foreground="{DynamicResource ForegroundColor}"/>
        </Canvas>
        <Canvas x:Name="canvasParent" Margin="158,38,0,0" Visibility="Hidden">
            <Canvas x:Name="DestinyNavbarCanvas" Background="{DynamicResource BackgroundColor}" Height="412" Width="642" Visibility="Hidden">
                <Image x:Name="DestinyCanvasBackground" Stretch="Fill" HorizontalAlignment="Center" Height="408" VerticalAlignment="Top" Width="640" Source="images/destiny_banner.jpg" Canvas.Left="2">
                    <Image.OpacityMask>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="Transparent" Offset="0.467"/>
                        </LinearGradientBrush>
                    </Image.OpacityMask>
                </Image>
                <Button Style="{DynamicResource NavbarStyleOne}" x:Name="DestinyCanvasLaunchButton" Content="Launch" HorizontalAlignment="Left" VerticalAlignment="Center" Width="157" Height="45" Canvas.Right="50" Canvas.Top="153" Background="#23343d" Foreground="#eb7623" Canvas.Left="475" FontFamily="Segoe UI Light" FontSize="14" Click="DestinyCanvasLaunchButton_Click"/>
                <Label x:Name="DestinyCanvasLabel" Content="Destiny 2 Script Menu" HorizontalAlignment="Center" VerticalAlignment="Top" Width="Auto" Height="Auto" FontFamily="Segoe UI Light" FontSize="22" Foreground="#eb7623" Canvas.Left="10" Canvas.Top="153"/>
                <Rectangle HorizontalAlignment="Left" Height="2" Stroke="#eb7623" StrokeThickness="0" Fill="#eb7623" VerticalAlignment="Center" Width="642" Canvas.Top="213"/>
            </Canvas>
            <Canvas x:Name="WarframeNavbarCanvas" Background="{DynamicResource BackgroundColor}" Height="412" Width="642" Visibility="Hidden">
                <Image x:Name="WarframeCanvasBackground" Stretch="Fill" HorizontalAlignment="Center" Height="408" VerticalAlignment="Top" Width="640" Source="images/warframe_banner.jpg" Canvas.Left="2">
                    <Image.OpacityMask>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="Transparent" Offset="0.467"/>
                        </LinearGradientBrush>
                    </Image.OpacityMask>
                </Image>
                <Button Style="{DynamicResource NavbarStyleOne}" x:Name="WarframeCanvasLaunchButton" Content="Launch" HorizontalAlignment="Left" VerticalAlignment="Center" Width="157" Height="45" Canvas.Right="50" Canvas.Top="153" Background="#23343d" Foreground="#eb7623" Canvas.Left="475" FontFamily="Segoe UI Light" FontSize="14"/>
                <Label x:Name="WarframeCanvasLabel" Content="Warframe Script Menu" HorizontalAlignment="Center" VerticalAlignment="Top" Width="Auto" Height="Auto" FontFamily="Segoe UI Light" FontSize="22" Foreground="#eb7623" Canvas.Left="10" Canvas.Top="153"/>
                <Rectangle HorizontalAlignment="Left" Height="2" Stroke="#eb7623" StrokeThickness="0" Fill="#eb7623" VerticalAlignment="Center" Width="642" Canvas.Top="213"/>
            </Canvas>
            <Canvas x:Name="RustNavbarCanvas" Background="{DynamicResource BackgroundColor}" Height="412" Width="642" Visibility="Hidden">
                <Image x:Name="RustCanvasBackground" Stretch="Fill" HorizontalAlignment="Center" Height="408" VerticalAlignment="Top" Width="640" Source="images/destiny_banner.jpg" Canvas.Left="2">
                    <Image.OpacityMask>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="Transparent" Offset="0.467"/>
                        </LinearGradientBrush>
                    </Image.OpacityMask>
                </Image>
                <Button Style="{DynamicResource NavbarStyleOne}" x:Name="RustCanvasLaunchButton" Content="Launch" HorizontalAlignment="Left" VerticalAlignment="Center" Width="157" Height="45" Canvas.Right="50" Canvas.Top="153" Background="#23343d" Foreground="#eb7623" Canvas.Left="475" FontFamily="Segoe UI Light" FontSize="14"/>
                <Label x:Name="RustCanvasLabel" Content="Rust Script Menu" HorizontalAlignment="Center" VerticalAlignment="Top" Width="Auto" Height="Auto" FontFamily="Segoe UI Light" FontSize="22" Foreground="#eb7623" Canvas.Left="10" Canvas.Top="153"/>
                <Rectangle HorizontalAlignment="Left" Height="2" Stroke="#eb7623" StrokeThickness="0" Fill="#eb7623" VerticalAlignment="Center" Width="642" Canvas.Top="213"/>
            </Canvas>
            <Canvas x:Name="ReleaseNotesNavbarCanvas" Background="{DynamicResource BackgroundColor}" Height="412" Width="642" Visibility="Visible">
                <Label x:Name="ReleaseNotesLabel" Content="Release Notes" Canvas.Left="254" Canvas.Top="10" Foreground="{DynamicResource ForegroundColor}" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Rectangle Fill="{DynamicResource ForegroundColor}" Height="2" Canvas.Left="254" Canvas.Top="47" Width="134" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Width="622" Canvas.Left="10" Canvas.Top="54" Height="348" TextAlignment="Center" Foreground="{DynamicResource ForegroundColor}" FontSize="13">
